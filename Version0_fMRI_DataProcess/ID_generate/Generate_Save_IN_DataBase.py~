from collections import defaultdict
import csv

class _EachSubject:
    # each subject is a element of a list
    def __init__(self, SubjectID, Sex, DX_Group, imageID):
        self.Sex = Sex
        self.DX_Group = DX_Group
        self.SubjectID = SubjectID
        # baseline is a dict, imageID:data
        self.baseline = {imageID:list()}
        # otherdata after baseline is also a dict, imageID:data
        self.other = {}
        
def main():
    with open('idaSearch_9_07_2016_ADNI2.csv','rb') as csvfile:
        reader = csv.DictReader(csvfile)
        wholeDataOFcsv = []
        for row in reader:
            wholeDataOFcsv.append(row)

    #analysis wholeDataOFcsv now
    iSubjectID = null
    jSubjectID = null
    baselineFlag = False
    ValidData = list()
    for row in wholeDataOFcsv:
        for SubjectNo, SubjectID in row['Subject ID']:
            if row['Description'][SubjectNO] == 'Resting State fMRI':
                if iSubjectID == null:
                    iSubjectID = SubjectID
                    baselineFlag = False
                    _Subject = _EachSubject(SubjectID, row['Sex'][SubjectNo],
                                            row['DX Group'][SubjectNo], row['Image ID'][SubjectNo])
            
